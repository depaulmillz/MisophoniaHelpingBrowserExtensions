{
  "name": "Hulu Mute",
  "description": "Mutes Misophonia Triggers on Hulu",
  "version": "1.2.2",
  "permissions": [
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_icon": "muteoff.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.hulu.com/watch/*"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "manifest_version": 2
}